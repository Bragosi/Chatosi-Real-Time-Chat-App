# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx,json,css,html}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[package.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2