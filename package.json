{
  "name": "chatosi",
  "version": "1.0.0",
  "description": "A real-time chat application",
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "lint": "cd backend && npm run lint && cd ../frontend && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bragosi/Chatosi-Real-Time-Chat-App.git"
  },
  "keywords": [
    "chat",
    "real-time",
    "react",
    "nodejs"
  ],
  "author": "Bragosi",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bragosi/Chatosi-Real-Time-Chat-App/issues"
  },
  "homepage": "https://github.com/Bragosi/Chatosi-Real-Time-Chat-App#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
